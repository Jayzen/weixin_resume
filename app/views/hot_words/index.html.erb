<% @hot_words.each_with_index do |hot_word, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= hot_word.name %>
      <% if hot_word.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%> 
    </div>
    <div>
      <%= link_to '查看', hot_word_path(hot_word), class: "badge badge-primary"%>
      <%= link_to '编辑', edit_hot_word_path(hot_word), class: "badge badge-primary"%>
      <%= link_to '删除', delete_hot_word_path(hot_word), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_hot_word_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @hot_words %></div>
</div>
<%= render 'shared/confirm_modal' %>
