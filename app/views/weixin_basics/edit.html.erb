<%= form_for(@user, method: :put, url: weixin_basic_path) do |f| %>
  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">appkey:</div>
      <div class="col-sm-8"><%= @user.appkey %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">app_id:</div>
      <div class="col-sm-8"><%= f.text_field :app_id, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">app_secret:</div>
      <div class="col-sm-8"><%= f.text_field :app_secret, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">merchant_id:</div>
      <div class="col-sm-8"><%= f.text_field :merchant_id, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">merchant_key:</div>
      <div class="col-sm-8"><%= f.text_field :merchant_key, class: "form-control" %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">商户绑定:</div>
      <div class="col-sm-8"><%= f.file_field :merchant, class: "form-control" %></div>
    </div>  
    <div class="form-group row">
      <div class="col-sm-2 text-right"></div>
      <div class="col-sm-8 text-left"><%= f.submit "更新", class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
<% end -%>
