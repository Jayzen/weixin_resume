<% @home_photograph_categories.each_with_index do |home_photograph_category, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= home_photograph_category.name %>
      <% if home_photograph_category.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%>
    </div>
    <div>
      <%= link_to '查看', home_photograph_category_path(home_photograph_category), class: "badge badge-primary"%>
      <%= link_to '编辑', edit_home_photograph_category_path(home_photograph_category), class: "badge badge-primary"%>
      <%= link_to '删除', delete_home_photograph_category_path(home_photograph_category), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_home_photograph_category_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @home_photograph_categories %></div>
</div>
<%= render 'shared/confirm_modal' %>
