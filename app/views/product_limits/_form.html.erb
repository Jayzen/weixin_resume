<%= form_for(@product_limit) do |f| %>
  <% unless @product_limit.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% @product_limit.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>
  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">关联商品:</div>
      <div class="col-sm-8"><%= f.collection_select :product_id, @products, :id, :name, {}, {class: "form-control"}%></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">过期时间:</div>
      <div class="col-sm-8 input-group date" id="datetimepicker2" data-target-input="nearest">
        <%= f.text_field :limit, class: "form-control datetimepicker-input", placeholder: "选择事件日期...", data: { target: "#datetimepicker2"} %>
        <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8"><%= f.number_field :order, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">显示:</div>
      <div class="col-sm-8"><%= f.collection_select :reveal, [[ProductLimit::Status::On, '发布'], [ProductLimit::Status::Off, '不发布']], :first, :last, {}, {class: "form-control"}%></div> 
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right"></div>
      <div class="col-sm-8 text-left"><%= f.submit (@product_limit.new_record? ? "新建" : "更新"), class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
<% end -%>
