<% @products.each_with_index do |product, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= product.name %>
      <% if product.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%> 
    </div>
    <div>
      <%= link_to '查看', product_path(product), class: "badge badge-primary"%>
      <%= link_to '照片', product_product_images_path(product), class: "badge badge-primary" %>
      <%= link_to '编辑', edit_product_path(product), class: "badge badge-primary"%>
      <%= link_to '删除', delete_product_path(product), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_product_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @products %></div>
</div>
<%= render 'shared/confirm_modal' %>
