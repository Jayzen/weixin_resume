  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">名称:</div>
      <div class="col-sm-8 col-form-label"><%= @product.name %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">描述:</div>
      <div class="col-sm-8 col-form-label"><%= @product.description %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">价格:</div>
      <div class="col-sm-8 col-form-label"><%= @product.price %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">图片:</div>
      <div class="col-sm-8 col-form-label">
        <% if @product.pic.url %>
          <%= image_tag @product.pic.url, height: "250" %>
        <% end -%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">关联商品分类:</div>
      <div class="col-sm-8 col-form-label"><%= @product.product_sort.name %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">显示:</div>
      <div class="col-sm-8 col-form-label"><%= @product.reveal? ? "显示" : "隐藏" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">是否显示首页:</div>
      <div class="col-sm-8 col-form-label"><%= @product.set_home? ? "显示首页" : "不显示首页" %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8 col-form-label"><%= @product.order %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label"></div>
      <div class="col-sm-8 text-left"><%= link_to "编辑", edit_product_path(@product), class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
