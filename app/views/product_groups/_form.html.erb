<%= form_for(@product_group) do |f| %>
  <% unless @product_group.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% @product_group.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>
  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">关联商品:</div>
      <div class="col-sm-8"><%= f.collection_select :product_id, @products, :id, :name, {}, {class: "form-control"}%></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">团购价格:</div>
      <div class="col-sm-8"><%= f.text_field :price, class: "form-control" %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8"><%= f.number_field :order, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">显示:</div>
      <div class="col-sm-8"><%= f.collection_select :reveal, [[ProductGroup::Status::On, '发布'], [ProductGroup::Status::Off, '不发布']], :first, :last, {}, {class: "form-control"}%></div> 
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right"></div>
      <div class="col-sm-8 text-left"><%= f.submit (@product_group.new_record? ? "新建" : "更新"), class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
<% end -%>
