  <div class="card">
    <div class="card-header text-center">
      权限设置
    </div>
    <div class="card-body">
      <%= form_for(@user,
                   url: update_privilege_admin_path(@user),
                   method: 'put'
                  ) do |f| %>
        <div class="form-group">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[basic]"  value=true <%= (@user.has_roles?(:basic) ? "checked" : "") %>>
              <label class="form-check-label">
                名片基本信息
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[wedding_basic]"  value=true <%= (@user.has_roles?(:wedding_basic) ? "checked" : "") %>>
              <label class="form-check-label">
                摄影基本信息
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[workshop_basic]"  value=true <%= (@user.has_roles?(:workshop_basic) ? "checked" : "") %>>
              <label class="form-check-label">
                工作室基本信息
              </label>
            </div>           
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[top]"  value=true <%= (@user.has_roles?(:top) ? "checked" : "") %>>
              <label class="form-check-label">
                头部图片信息
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[state]"  value=true <%= (@user.has_roles?(:state) ? "checked" : "") %>>
              <label class="form-check-label">
                摄影说明
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[movie]"  value=true <%= (@user.has_roles?(:movie) ? "checked" : "") %>>
              <label class="form-check-label">
                影像说明
              </label>
            </div> 
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[location]"  value=true <%= (@user.has_roles?(:location) ? "checked" : "") %>>
              <label class="form-check-label">
                地址设置
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[comment]"  value=true <%= (@user.has_roles?(:comment) ? "checked" : "") %>>
              <label class="form-check-label">
                评论管理
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[carousel]"  value=true <%= (@user.has_roles?(:carousel) ? "checked" : "") %>>
              <label class="form-check-label">
                轮播图管理
              </label>
            </div> 
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[home_photograph_category]"  value=true <%= (@user.has_roles?(:home_photograph_category) ? "checked" : "") %>>
              <label class="form-check-label">
                首页分类管理
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[recent]"  value=true <%= (@user.has_roles?(:recent) ? "checked" : "") %>>
              <label class="form-check-label">
                最新活动
              </label>
            </div>  
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[tap_carousel]"  value=true <%= (@user.has_roles?(:tap_carousel) ? "checked" : "") %>>
              <label class="form-check-label">
                点击轮播图管理
              </label>
            </div> 
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[menu]"  value=true <%= (@user.has_roles?(:menu) ? "checked" : "") %>>
              <label class="form-check-label">
                价目表
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[tap_carousel_photograph]"  value=true <%= (@user.has_roles?(:tap_carousel_photograph) ? "checked" : "") %>>
              <label class="form-check-label">
                点击摄影内容
              </label>
            </div> 
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="privilege[photograph]"  value=true <%= (@user.has_roles?(:photograph) ? "checked" : "") %>>
               <label class="form-check-label">
                 摄影内容
               </label>
             </div> 
             <div class="form-check">
               <input class="form-check-input" type="checkbox" name="privilege[consult]"  value=true <%= (@user.has_roles?(:consult) ? "checked" : "") %>>
               <label class="form-check-label">
                 咨询管理
                </label>
             </div>
             <div class="form-check">
               <input class="form-check-input" type="checkbox" name="privilege[appointment]"  value=true <%= (@user.has_roles?(:appointment) ? "checked" : "") %>>
               <label class="form-check-label">
                 预约管理         
               </label>
             </div>
            <%= hidden_field_tag "privilege[not_nil]", true %>
        </div>
        <div class="form-group">
            <%= f.submit "更新权限", class: "btn btn-primary btn-sm"%>
        </div>
      <% end %>
    </div>
  </div>
