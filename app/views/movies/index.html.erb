<% @movies.each_with_index do |movie, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= movie.title %>
      <% if movie.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%> 
    </div>
    <div>
      <%= link_to '查看', movie_path(movie), class: "badge badge-primary"%>
      <%= link_to '编辑', edit_movie_path(movie), class: "badge badge-primary"%>
      <%= link_to '删除', delete_movie_path(movie), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_movie_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @movies %></div>
</div>
<%= render 'shared/confirm_modal' %>
