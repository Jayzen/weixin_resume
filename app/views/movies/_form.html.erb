<%= form_for(@movie) do |f| %>
  <% unless @movie.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% @movie.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>
  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">名称:</div>
      <div class="col-sm-8"><%= f.text_field :title, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">内容:</div>
      <div class="col-sm-8"><%= f.text_field :content, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">影片:</div>
      <div class="col-sm-8"><%= f.file_field :movie, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">显示:</div>
      <div class="col-sm-8"><%= f.collection_select :reveal, [[Movie::Status::On, '发布'], [Movie::Status::Off, '不发布']], :first, :last, {}, {class: "form-control"}%></div>
    </div> 

    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8"><%= f.number_field :order, class: "form-control" %></div>
    </div>   

    <div class="form-group row">
      <div class="col-sm-2 text-right"></div>
      <div class="col-sm-8 text-left"><%= f.submit (movie.new_record? ? "新建" : "更新"), class: "btn btn-primary btn-sm" %></div>
    </div>
  </div>
<% end -%>
