  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">名称:</div>
      <div class="col-sm-8 col-form-label"><%= @location.name %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">详细地址:</div>
      <div class="col-sm-8 col-form-label"><%= @location.address %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">经度:</div>
      <div class="col-sm-8 col-form-label"><%= @location.longitude %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">纬度:</div>
      <div class="col-sm-8 col-form-label"><%= @location.latitude %></div>
