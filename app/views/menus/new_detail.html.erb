<%= form_for(@menu_detail, method: :post, url: create_detail_menu_path) do |f| %>
  <% unless @menu_detail.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% @menu_detail.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>
  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">标题:</div>
      <div class="col-sm-8"><%= f.text_field :title, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">图片:</div>
      <div class="col-sm-8"><%= f.file_field :pic, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">显示:</div>
      <div class="col-sm-8"><%= f.collection_select :reveal, [[MenuDetail::Status::On, '发布'], [MenuDetail::Status::Off, '不发布']], :first, :last, {}, {class: "form-control"}%></div>
    </div> 

    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8"><%= f.number_field :order, class: "form-control" %></div>
    </div>   

    <div class="form-group row">
      <div class="col-sm-2 text-right"></div>
      <div class="col-sm-8 text-left"><%= f.submit "新建", class: "btn btn-primary btn-sm" %></div>
    </div>
  </div>
<% end -%>
