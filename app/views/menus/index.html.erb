<% @menus.each_with_index do |menu, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= menu.title %>
      <% if menu.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%> 
    </div>
    <div>
      <%= link_to '查看', menu_path(menu), class: "badge badge-primary"%>
      <%= link_to '价格明细', detail_menu_path(menu), class: "badge badge-primary" %>
      <%= link_to '编辑', edit_menu_path(menu), class: "badge badge-primary"%>
      <%= link_to '删除', delete_menu_path(menu), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_menu_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @menus %></div>
</div>
<%= render 'shared/confirm_modal' %>
