<% @menu_details.each_with_index do |menu_detail, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= menu_detail.title %>
      <% if menu_detail.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%> 
    </div>
    <div>
      <%= link_to '查看', show_detail_menu_path(@menu, menu_detail: menu_detail), class: "badge badge-primary"%>
      <%= link_to '删除', delete_detail_menu_path(@menu, menu_detail: menu_detail), class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_detail_menu_path, class: "btn btn-primary btn-sm" %></div>
</div>
<%= render 'shared/confirm_modal' %>
