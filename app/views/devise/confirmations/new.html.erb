<div class="row">
  <div class="col-sm-4 ml-auto mr-auto">
    <h2 class="text-center">邮件确认</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label "邮件" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: '邮箱地址', class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="actions">
        <%= f.submit "邮件确认", class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
