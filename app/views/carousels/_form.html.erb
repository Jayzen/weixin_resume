<%= form_with(model: carousel, local: true) do |form| %>
  <% unless carousel.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% carousel.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "输入标题", class: "form-control" %>
  </div>
  

  <div class="form-group">
    <%= form.file_field :pic, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.submit "提交", class: "form-control" %>
  </div>

  <div class="form-group">
  </div>
<% end %>

