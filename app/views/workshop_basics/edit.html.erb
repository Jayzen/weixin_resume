<%= form_for(@workshop_basic) do |f| %>
  <% unless @workshop_basic.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% @workshop_basic.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>
  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">名称:</div>
      <div class="col-sm-8"><%= f.text_field :name, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">手机号码:</div>
      <div class="col-sm-8"><%= f.text_field :phone, class: "form-control" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">营业时间:</div>
      <div class="col-sm-8"><%= f.text_field :business_hour, class: "form-control" %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right"></div>
      <div class="col-sm-8 text-left"><%= f.submit "更新", class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
<% end -%>
