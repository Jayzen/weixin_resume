<% @product_sorts.each_with_index do |product_sort, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= product_sort.product.name %>
    </div>
    <div>
      <%= link_to '删除', delete_sort_product_sort_path(@sort, product_sort), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div>
    <%= link_to '商品分类', sorts_path, class: "btn btn-primary btn-sm" %>
    <%= link_to '新建', new_sort_product_sort_path(@sort), class: "btn btn-primary btn-sm" %>
  </div>
  <div><%= paginate @product_sorts %></div>
</div>
<%= render 'shared/confirm_modal' %>
