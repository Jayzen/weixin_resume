<% @themes.each_with_index do |theme, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= theme.name %>
      <% if theme.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%>
    </div>
    <div>
      <%= link_to '查看', theme_path(theme), class: "badge badge-primary"%>
      <%= link_to '商品', theme_product_themes_path(theme), class: "badge badge-primary" %>
      <%= link_to '编辑', edit_theme_path(theme), class: "badge badge-primary"%>
      <%= link_to '删除', delete_theme_path(theme), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_theme_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @themes %></div>
</div>
<%= render 'shared/confirm_modal' %>
