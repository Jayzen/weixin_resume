  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">标题:</div>
      <div class="col-sm-8 col-form-label"><%= @tap_photograph.name %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">图片:</div>
      <div class="col-sm-8 col-form-label">
        <% if @tap_photograph.pic.url %>
          <%= image_tag @tap_photograph.pic.url, height: "150" %>
        <% end -%>
      </div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">关联轮播分类:</div>
      <div class="col-sm-8 col-form-label"><%= @tap_photograph.tap_carousel.name %></div>
    </div>   
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">显示:</div>
      <div class="col-sm-8 col-form-label"><%= @tap_photograph.reveal? ? "显示" : "隐藏" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8 col-form-label"><%= @tap_photograph.order %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label"></div>
      <div class="col-sm-8 text-left"><%= link_to "编辑", edit_tap_photograph_path(@tap_photograph), class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
