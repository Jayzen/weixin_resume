<% @tap_photographs.each_with_index do |tap_photograph, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= tap_photograph.name %>
      <% if tap_photograph.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%>
    </div>
    <div>
      <%= link_to '查看', tap_photograph_path(tap_photograph), class: "badge badge-primary"%>
      <%= link_to '编辑', edit_tap_photograph_path(tap_photograph), class: "badge badge-primary"%>
      <%= link_to '删除', delete_tap_photograph_path(tap_photograph), remote: true, class: "badge badge-primary" %>
      <%= link_to '照片', tap_photograph_tap_photograph_images_path(tap_photograph), class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_tap_photograph_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @tap_photographs %></div>
</div>
<%= render 'shared/confirm_modal' %>
