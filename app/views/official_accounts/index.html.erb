<% @official_accounts.each_with_index do |official_account, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= official_account.name %>
      <% if official_account.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%>
    </div>
    <div>
      <%= link_to '查看', official_account_path(official_account), class: "badge badge-primary"%>
      <%= link_to '编辑', edit_official_account_path(official_account), class: "badge badge-primary"%>
      <%= link_to '删除', delete_official_account_path(official_account), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_official_account_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @official_accounts %></div>
</div>
<%= render 'shared/confirm_modal' %>
