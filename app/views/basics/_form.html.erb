<%= form_with(model: basic, local: true) do |form| %>
  <% unless basic.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% basic.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "输入姓名", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.file_field :avatar, placeholder: "上传用户头像", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :motto, placeholder: "职业信条", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :introduce, placeholder: "输入介绍", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone, placeholder: "输入电话", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :wechat, placeholder: "输入微信", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, placeholder: "输入邮件", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :company, placeholder: "输入公司名称", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :job, placeholder: "输入工作内容", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :position, placeholder: "输入公司地址", class: "form-control" %>
  </div>

  <div class="form-group d-flex flex-row-reverse">
    <%= form.submit basic.new_record?  ? "创建" : "更新", class: "btn btn-primary" %>
  </div>
<% end -%>
