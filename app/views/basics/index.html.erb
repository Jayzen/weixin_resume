<div class="d-flex flex-row-reverse mb-4">
  <%= link_to '新建文章', new_basic_path, class: "btn btn-primary" %>
</div>

<% @basics.each_with_index do |basic, index| %>
    <div class="d-flex justify-content-between">
      <div>
        <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
        <%= basic.name %>
      </div>
      <div>
        <%= link_to '查看', basic_path(basic), class: "badge badge-primary"%>
        <%= link_to '编辑', edit_basic_path(basic), class: "badge badge-primary"%>
        <%= link_to '删除', delete_basic_path(basic), remote: true, class: "badge badge-primary" %>
      </div>
    </div>
<% end %>
<div class="mt-2">
  <%= paginate @basics %>
</div>
<%= render 'shared/confirm_modal' %>
