<% @product_homes.each_with_index do |product_home, index| %>
  <div class="d-flex justify-content-between">
    <div>
      <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
      <%= product_home.product.name %>
      <% if product_home.reveal? %>
        <span class="badge badge-primary">已发布</span>
      <% else %>
        <span class="badge badge-danger">未发布</span>
      <% end -%>
    </div>
    <div>
      <%= link_to '查看', product_home_path(product_home), class: "badge badge-primary"%>
      <%= link_to '编辑', edit_product_home_path(product_home), class: "badge badge-primary"%>
      <%= link_to '删除', delete_product_home_path(product_home), remote: true, class: "badge badge-primary" %>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-2">
  <div><%= link_to '新建', new_product_home_path, class: "btn btn-primary btn-sm" %></div>
  <div><%= paginate @product_homes %></div>
</div>
<%= render 'shared/confirm_modal' %>
