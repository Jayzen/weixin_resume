  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">名称:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.name %></div>
    </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">联系方式:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.phone %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">商标照片:</div>
      <div class="col-sm-8 col-form-label">
        <% if @merchant_basic.avatar.url %>
          <%= image_tag @merchant_basic.avatar.url, height: "50" %>
        <% end -%>
      </div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">商家介绍:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.description %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">营业时间:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.duty %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">wifi:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.is_wifi? ? "有" : "无" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">停车场:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.is_parking? ?  "有" : "无" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">微信支付:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.is_wechat_pay? ? "有" : "无" %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">支付宝支付:</div>
      <div class="col-sm-8 col-form-label"><%= @merchant_basic.is_alipay? ? "有" : "无" %></div>
    </div>  
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label"></div>
      <div class="col-sm-8 text-left">
        <%= link_to "编辑", edit_merchant_basic_path, class: "btn btn-primary btn-sm" %>
        <%= link_to "更多商户介绍", merchant_basic_merchant_basic_images_path, class: "btn btn-primary btn-sm" %>
      </div>
    </div>  
  </div>
