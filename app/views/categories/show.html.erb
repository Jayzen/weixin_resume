  <div class="d-flex flex-column">
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">标题:</div>
      <div class="col-sm-8 col-form-label"><%= @category.name %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">价格:</div>
      <div class="col-sm-8 col-form-label"><%= @category.price %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">小图标:</div>
      <div class="col-sm-8 col-form-label">
        <% if @category.small_pic.url %>
          <%= image_tag @category.small_pic.url, height: "50" %>
        <% end -%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">大照片:</div>
      <div class="col-sm-8 col-form-label">
        <% if @category.big_pic.url %>
          <%= image_tag @category.big_pic.url, height: "150" %>
        <% end -%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">本单特色:</div>
      <div class="col-sm-8 col-form-label"><%= @category.merit %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">适用年龄:</div>
      <div class="col-sm-8 col-form-label"><%= @category.age %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">服装说明:</div>
      <div class="col-sm-8 col-form-label"><%= @category.clothing %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">照片说明:</div>
      <div class="col-sm-8 col-form-label"><%= @category.picture %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">摄影师:</div>
      <div class="col-sm-8 col-form-label"><%= @category.photographer %></div>
    </div> 
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">其他说明:</div>
      <div class="col-sm-8 col-form-label"><%= @category.others %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label">排序:</div>
      <div class="col-sm-8 col-form-label"><%= @category.order %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 text-right col-form-label"></div>
      <div class="col-sm-8 text-left"><%= link_to "编辑", edit_category_path(@category), class: "btn btn-primary btn-sm" %></div>
    </div>  
  </div>
