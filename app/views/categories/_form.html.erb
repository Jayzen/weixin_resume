<%= form_with(model: category, local: true) do |form| %>
  <% unless category.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% category.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "输入标题", class: "form-control" %>
  </div>
  

  <div class="form-group">
    <%= form.file_field :big_pic, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.file_field :small_pic, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :order, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :content, class: "form-control" %>
  </div> 

  <div class="form-group">
    <%= form.submit "提交", class: "form-control" %>
  </div>

  <div class="form-group">
  </div>
<% end %>

